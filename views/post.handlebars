<h2>Post</h2>
<div class="card border-secondary" style="max-width: 75rem;">
  <div class="card-header">
    <a href="/posts/{{post.id}}"><h3>{{post.title}}</h3></a>
  </div>
  <div class="card-body">
    <p class="card-text">{{post.contents}}</p>
    <div class="footer text-body-secondary">Posted by {{post.user.id}} on {{post.date_created}}</div>
  </div>
</div>

{{#each comment}}
<p>{{comment}}</p>
{{/each}}
<h3>Comment</h3>
<textarea></textarea>
<button type="submit" id="comment-submit">Comment</button>


<div id="comment-form" style="max-width: 75rem;">
  <label for="comment" class="form-label">Post Content</label>
  <textarea class="form-control" id="comment" rows="3"></textarea>
  <button type="submit" id="comment-submit">Post</button>
</div>
</div>

{{#if canEdit}}
<div id="post-form" style="max-width: 75rem;">
<div class="mb-3" >
  <label for="post-title" class="form-label">Post Title</label>
  <input type="email" class="form-control" id="post-title" value="{{post.title}}">
</div>
<div class="mb-3">
  <label for="post-contents" class="form-label">Post Content</label>
  <textarea class="form-control" id="post-contents" rows="3" value="{{post.contents}}"></textarea>
  <button type="submit" id="post-submit">Edit Post</button>
</div>
</div>
{{/if}}

<script src="/js/add-comment.js"></script>
<script src="/js/add-post.js"></script>